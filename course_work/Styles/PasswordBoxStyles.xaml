<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="PasswordBox" x:Key="PasswordBoxBase">
        <Setter Property="BorderBrush" Value="#830505"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontFamily" Value="Monteserrat"/>
        <Setter Property="Foreground" Value="#d3c0a3"/>
        <Setter Property="CaretBrush" Value="LightGray"/>
        <Setter Property="BorderBrush" Value="#830505"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
        <Setter Property="Padding" Value="25,0,0,0"/>
    </Style>
</ResourceDictionary>