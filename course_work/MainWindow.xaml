<Window x:Class="course_work.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:course_work"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="900" Width="1600" Loaded="Window_Loaded">

        <Window.Resources>
        <local:RoomClassConverter x:Key="RoomClassConverter" />
        <local:RoomSizeConverter x:Key="RoomSizeConverter" />
    </Window.Resources>
    
        <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition MaxHeight="100"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Background="CadetBlue">
            <DataGrid x:Name="testGrid" MaxWidth="1800" Margin="20 30 20 30" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" RowBackground="#e5e6dc" SelectionMode="Single">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding room_class, Converter = {StaticResource RoomClassConverter}}" Header="Тип комнаты" IsReadOnly="True"></DataGridTextColumn>
                    <DataGridTextColumn Binding="{Binding room_size, Converter = {StaticResource RoomSizeConverter}}" Header="Размер комнаты" IsReadOnly="True"></DataGridTextColumn>

                    <DataGridTemplateColumn Header="Фото комнаты" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="{Binding photo}" MaxWidth="400" MaxHeight="200"></Image>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <Grid Background="BlanchedAlmond" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button x:Name="test" MinWidth="100" MaxWidth="150" MinHeight="40" MaxHeight="50" Margin="0 0 30 0" HorizontalAlignment="Right" VerticalAlignment="Center" >
                <Button.Content>Забранировать</Button.Content>
            </Button>

            <DatePicker Grid.Column="1" MinWidth="180" MaxWidth="300" MinHeight="30" MaxHeight="50" Margin="30 0 0 0" HorizontalAlignment="Left"  VerticalAlignment="Center">

            </DatePicker>

        </Grid>
    </Grid>
</Window>
