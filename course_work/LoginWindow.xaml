<Window x:Class="course_work.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:course_work"
        mc:Ignorable="d"
        Title="LoginWindow" Height="220" Width="300">
    <Grid Background="AliceBlue">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock > Логин</TextBlock>
            <TextBox x:Name="UsernameBox" Margin="0 5 0 15" Width="200"></TextBox>
            <TextBlock > Пароль</TextBlock>
            <TextBox x:Name="PasswordBox" Margin="0 5 0 20" Width="200"></TextBox>

            <Button x:Name="LoginButton" Click="LoginButton_Click">Вход</Button>
        </StackPanel>
    </Grid>
</Window>
