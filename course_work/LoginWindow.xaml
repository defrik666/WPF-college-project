<Window x:Class="course_work.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:course_work"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="300">
    <Grid Background="AliceBlue">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock > Имя сервера</TextBlock>
            <TextBox Margin="0 15 0 15" Width="200"></TextBox>
            <Button x:Name="LoginButton" Click="Login">Вход</Button>
        </StackPanel>
    </Grid>
</Window>
